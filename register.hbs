<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8">
  <title>Task Tracker</title>
  <link rel="stylesheet" href="css/styleregis.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    /* Setting the body background color */
    body {
      background-color: #dde6e6;
      font-family: Arial, sans-serif;
    }

    .form-container {
      background-color: #dde6e6;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .container {
      max-width: 700px;
      width: 100%;
      margin: auto;
      padding: 40px 0;
    }

    .title {
      font-size: 25px;
      font-weight: 500;
      position: relative;
      margin-bottom: 20px;
      text-align: center;
    }

    .content form .user-details {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .content form .input-box {
      margin-bottom: 15px;
      width: calc(100% / 2 - 20px);
      position: relative;
    }

    .content form .input-box span.details {
      display: block;
      font-weight: 500;
      margin-bottom: 5px;
    }

    .content form .input-box input {
      height: 45px;
      width: 100%;
      outline: none;
      font-size: 16px;
      border-radius: 5px;
      padding-left: 15px;
      border: 1px solid #ccc;
      border-bottom-width: 2px;
      transition: all 0.3s ease;
    }

    .content form .input-box .toggle-password {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
    }

    .content form .gender-details {
      display: flex;
      width: 100%;
      margin-bottom: 20px;
      align-items: center;
    }

    .content form .gender-title {
      font-weight: 500;
      margin-right: 20px;
    }

    .content form .gender-details .category {
      display: flex;
      justify-content: space-between;
      width: 100%;
    }

    .content form .gender-details .category label {
      display: flex;
      align-items: center;
      cursor: pointer;
    }

    .content form .gender-details .category .dot {
      height: 18px;
      width: 18px;
      background: #d9d9d9;
      border-radius: 50%;
      margin-right: 10px;
      position: relative;
    }

    .content form .gender-details .category .dot::before {
      content: '';
      position: absolute;
      width: 8px;
      height: 8px;
      background: #000;
      border-radius: 50%;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .content form .gender-details input[type="radio"] {
      display: none;
    }

    .content form .gender-details input[type="radio"]:checked ~ .dot::before {
      opacity: 1;
    }

    .content form .button {
      height: 45px;
      margin: 35px 0;
    }

    .content form .button input {
      height: 100%;
      width: 100%;
      border-radius: 5px;
      border: none;
      color: #dde6e6;
      font-size: 18px;
      font-weight: 500;
      letter-spacing: 1px;
      cursor: pointer;
      transition: all 0.3s ease;
      background: #0f0f0f;
    }

    .content form .button input:hover {
      background: #0c0c0c;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="title">Student Registration</div>
    <div class="content">
      <div class="form-container">
        <form action="/register" method="POST">
          <div class="user-details">
            <div class="input-box">
              <span class="details">Full Name</span>
              <input type="text" name="name" placeholder="Enter your name" required>
            </div>
            <div class="input-box">
              <span class="details">Username</span>
              <input type="text" name="username" placeholder="Enter your username" required>
            </div>
            <div class="input-box">
              <span class="details">Email</span>
              <input type="text" name="email" placeholder="Enter your email" required>
            </div>
            <div class="input-box">
              <span class="details">Phone Number</span>
              <input type="text" name="phoneno" placeholder="Enter your number" required>
            </div>
            <div class="input-box">
              <span class="details">Password</span>
              <input type="password" name="password" placeholder="Enter your password" required>
              <span class="toggle-password">üëÅÔ∏è</span>
            </div>
            <div class="input-box">
              <span class="details">Confirm Password</span>
              <input type="password" name="confirmpassword" placeholder="Confirm your password" required>
              <span class="toggle-password">üëÅÔ∏è</span>
            </div>
          </div>
          <div class="gender-details">
            <span class="gender-title">Gender</span>
            <div class="category">
              <label for="dot-1">
                <input type="radio" name="gender" id="dot-1">
                <span class="dot one"></span>
                <span class="gender">Male</span>
              </label>
              <label for="dot-2">
                <input type="radio" name="gender" id="dot-2">
                <span class="dot two"></span>
                <span class="gender">Female</span>
              </label>
              <label for="dot-3">
                <input type="radio" name="gender" id="dot-3">
                <span class="dot three"></span>
                <span class="gender">Prefer not to say</span>
              </label>
            </div>
          </div>
          <div class="button">
            <input type="submit" value="Register">
          </div>
        </form>
      </div>
    </div>
  </div>
  <script>
    document.querySelectorAll('.toggle-password').forEach(togglePassword => {
      togglePassword.addEventListener('click', function() {
        const input = this.previousElementSibling;
        if (input.type === 'password') {
          input.type = 'text';
          this.textContent = 'üëÅÔ∏è‚Äçüó®Ô∏è';
        } else {
          input.type = 'password';
          this.textContent = 'üëÅÔ∏è';
        }
      });
    });
  </script>
</body>
</html>
